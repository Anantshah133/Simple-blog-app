<%- include('./partials/header') %>
<%- include('./partials/navbar') %>

<section class="bg-white">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
            <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900">Latest blogs of Blogsपुर</h2>
            <p class="font-light text-gray-500 sm:text-base">"From insightful articles on technology trends to captivating narratives on travel adventures, there's something for every reader. Stay updated with the latest trends and immerse yourself in the world of blogging with Blogsपुर."</p>
        </div>
        <div class="grid gap-8 lg:grid-cols-2">
            <% blogs.forEach(blog => { %>
                <article class="p-6 bg-white rounded-lg border border-gray-200 shadow-md">
                    <div class="flex justify-between items-center mb-2 text-gray-500">
                        <span class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center py-0.5 rounded">
                            <i class="ri-image-circle-line text-2xl mr-2"></i>
                            Contains Image
                        </span>
                        <span class="text-sm font-bold">
                            <%= new Date(parseInt(blog.dateAndTime)).toLocaleString() %>
                        </span>
                    </div>
                    <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
                        <a href="javascript: void(0);"><%- blog.title %></a>
                    </h2>
                    <p class="mb-5 font-light text-gray-500">
                        <% if (blog.description.split(' ').length > 20) { %>
                            <%= blog.description.split(' ').slice(0, 20).join(' ') %>...
                        <% } else { %>
                            <%= blog.description %>
                        <% } %>
                    </p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center space-x-4">
                            <img class="w-7 h-7 rounded-full" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/jese-leos.png" alt="Jese Leos avatar" />
                            <span class="font-medium"><%- blog.userName %></span>
                        </div>
                        <a href="/blogs/read/<%= blog._id %>" class="inline-flex items-center font-medium text-primary-600 hover:underline">
                            Read more
                            <i class="ri-arrow-right-line ml-2 text-xl"></i>
                        </a>
                    </div>
                </article>
            <% }) %>
        </div>
    </div>
</section>

<%- include('./partials/footer') %>